<%- include('partials/head')%>

    <%- include('partials/navbar')%>
    
    <div  class="container">
    
        <div class="">
            <h1>Editar perfil</h1>
        </div>
        
        <!-- Aqui foi necessÃ¡rio adicionar o method-override para conseguir usar a rota PUT -->
        <form method="POST" action="/users/<%=user.id %>?_method=PUT">
            <div class="row">
                <div class="col-6 form-group">
                    <label for="name">Nome</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%=user.name %>">
                </div>
                <div class="col-4 form-group">
                    <label for="birth">Data de nascimento</label>
                    <input type="text" class="form-control" id="birth" name="birth" value="<%=user.birth %>">
                </div>
            </div>
            <div class="row">
                <div class="col-6 form-group">
                    <label for="email">E-mail</label>
                    <input type="text" class="form-control" id="email" name="email" value="<%=user.email %>">
                </div>    

                <div class="col-4 form-group">
                    <label for="phone">Celular</label>
                    <input type="text" class="form-control" id="phone" name="phone" value="<%=user.phone %>">
                </div>
            </div>
            <div class="row">
                <div class="col-5 form-group">
                    <label for="password">Senha</label>
                    <input type="password" class="form-control" id="password" name="password" value="<%=user.password %>">
                </div>
            </div>
            <div class="row">
                <div class="col-5 form-group">
                    <label for="books">Senha</label>
                    <input type="text" class="form-control" id="books" name="books" value="<%=user.books %>">
                </div>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
